<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="028-001" author="dms">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="workflows" columnName="app_header_id"/>
            </not>
        </preConditions>
        <comment>Add app_header_id column to workflows table for linking workflows to APP entries</comment>
        <addColumn tableName="workflows">
            <column name="app_header_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <changeSet id="028-002" author="dms">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_workflows_app_header"/>
            </not>
        </preConditions>
        <comment>Add foreign key constraint for workflows.app_header_id</comment>
        <addForeignKeyConstraint
                baseTableName="workflows"
                baseColumnNames="app_header_id"
                constraintName="fk_workflows_app_header"
                referencedTableName="app_headers"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="028-003" author="dms">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="workflows" indexName="idx_workflows_app_header"/>
            </not>
        </preConditions>
        <comment>Create index on workflows.app_header_id for performance</comment>
        <createIndex tableName="workflows" indexName="idx_workflows_app_header">
            <column name="app_header_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

