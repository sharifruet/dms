<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="007-001" author="dms">
        <comment>Create integration_configs table</comment>
        <createTable tableName="integration_configs">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="INACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="config" type="JSONB"/>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-002" author="dms">
        <comment>Create system_health_checks table</comment>
        <createTable tableName="system_health_checks">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="check_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="check_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="TEXT"/>
            <column name="response_time_ms" type="INTEGER"/>
            <column name="checked_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-003" author="dms">
        <comment>Add foreign key constraints</comment>
        <addForeignKeyConstraint
                baseTableName="integration_configs"
                baseColumnNames="created_by"
                constraintName="fk_integration_configs_created_by"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="007-004" author="dms">
        <comment>Create analytics_data table</comment>
        <createTable tableName="analytics_data">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="analytics_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="metric_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="metric_value" type="DOUBLE PRECISION"/>
            <column name="metric_data" type="TEXT"/>
            <column name="dimensions" type="TEXT"/>
            <column name="tags" type="VARCHAR(1000)"/>
            <column name="source_system" type="VARCHAR(100)"/>
            <column name="user_id" type="BIGINT"/>
            <column name="document_id" type="BIGINT"/>
            <column name="department" type="VARCHAR(100)"/>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="aggregation_level" type="VARCHAR(20)"/>
            <column name="is_predicted" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="confidence_score" type="DOUBLE PRECISION"/>
            <column name="model_version" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-005" author="dms">
        <comment>Add foreign key constraints for analytics_data</comment>
        <addForeignKeyConstraint
                baseTableName="analytics_data"
                baseColumnNames="user_id"
                constraintName="fk_analytics_data_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
        <addForeignKeyConstraint
                baseTableName="analytics_data"
                baseColumnNames="document_id"
                constraintName="fk_analytics_data_document"
                referencedTableName="documents"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="007-006" author="dms">
        <comment>Create indexes for analytics_data</comment>
        <createIndex tableName="analytics_data" indexName="idx_analytics_data_type">
            <column name="analytics_type"/>
        </createIndex>
        <createIndex tableName="analytics_data" indexName="idx_analytics_data_metric_name">
            <column name="metric_name"/>
        </createIndex>
        <createIndex tableName="analytics_data" indexName="idx_analytics_data_timestamp">
            <column name="timestamp"/>
        </createIndex>
        <createIndex tableName="analytics_data" indexName="idx_analytics_data_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="analytics_data" indexName="idx_analytics_data_document_id">
            <column name="document_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
